<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="31dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_marginHorizontal="44dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/logo2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/robotoblack"
            android:text="Quên mật khẩu"
            android:textSize="32sp" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/robotolight"
            android:text="Vui lòng nhập email của bạn để lấy lại mật khẩu"
            android:textAlignment="center"
            android:textColor="@color/red_light"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edt_getUser"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/box"
            android:elevation="@android:dimen/thumbnail_width"
            android:gravity="center"
            android:hint="Email" />

        <Button
            android:id="@+id/btn_getpw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/boxbutton"
            android:text="Lấy lại mật khẩu"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_quaylaidn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/robotoregular"
            android:text="Quay lại đăng nhập"
            android:textAlignment="center"
            android:textColor="#2537D8"
            android:textSize="17dp" />
    </LinearLayout>
</LinearLayout>